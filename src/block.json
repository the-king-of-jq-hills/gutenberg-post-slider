{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 2,
	"name": "create-block/txp-slider",
	"version": "0.1.0",
	"title": "Txp Slider",
	"category": "media",
	"icon": "cover-image",
	"description": "Post Featured Image Slider Block",
	"supports": {
		"html": false
	},
	"textdomain": "txp-slider",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css",
	"attributes": {
		"contentAlign": { 
			"type": "string",
			"default": "center"
		},
		"gradient": {
			"type": "string",
			"default": "linear-gradient(135deg,#12c2e9 0%,#c471ed 50%,#f64f59 100%)"
		},		
		"siteURL": {
			"type": "string",
			"default": "https://wptavern.com/"
		},
		"numberOfPosts": {
			"type": "number",
			"default": 2
		},
		"numberOfColumns": {
			"type": "number",
			"default": 1
		},		
		"overlayBgOpecity": {
			"type": "number",
			"default": 48
		}

	},
	"example": { "attributes": { 
		"contentAlign": "center", 
			"siteURL": "https://wptavern.com/",
			"gradient": "linear-gradient(135deg,#12c2e9 0%,#c471ed 50%,#f64f59 100%)",
			"numberOfPosts": 3,
			"numberOfColumns": 1, 
			"overlayBgOpecity": 56						
		}
	}
}
