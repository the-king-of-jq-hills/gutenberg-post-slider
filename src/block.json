{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 2,
	"name": "create-block/txp-slider",
	"version": "0.1.0",
	"title": "Txp Slider",
	"category": "media",
	"icon": "cover-image",
	"description": "Post Featured Image Slider Block",
	"supports": {
		"html": false
	},
	"textdomain": "txp-slider",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css",
	"attributes": {
		"align": {
			"type": "string",
			"default": "none"
		},
		"gradient": {
			"type": "string",
			"default": "linear-gradient(135deg,#12c2e9 0%,#c471ed 50%,#f64f59 100%)"
		},		
		"textColor": {
			"type": "string",
			"default": "#FFFFFF"
		},
		"siteURL": {
			"type": "string",
			"default": ""
		},
		"numberofPosts": {
			"type": "number",
			"default": 2
		},
		"overlayBgOpecity": {
			"type": "number",
			"default": 48
		}

	},
	"example": { "attributes": { 
		"align": "center", 
		"siteURL": "https://www.google.com/"
		}
	}
}
